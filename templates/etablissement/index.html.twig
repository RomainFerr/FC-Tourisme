{% extends 'base.html.twig' %}

{% block title %}Liste des Etablissements{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="d-flex  justify-content-center">Liste des Ã©tablissements</h1>

        <div class="row g-3 d-flex justify-content-around mt-4">

            {% for etablissement in etablissements %}

                <div class=" col-12 col-md-6 col-lg-4">
                    <div class="card border border-dark" style="height: 100%">
                        <div class="card-body">
                            <h4 class="card-title">{{ etablissement.nom |capitalize  }}</h4>
                        <div class="card-subtitle mb-2">
                            {% for categorie in etablissement.categorie %}
                                <span class="mb-1 badge bg-info">{{ categorie.nom |capitalize  }}</span>{% endfor %}
                            <p><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                                </svg> {{ etablissement.ville.codepostal }}, {{ etablissement.ville.nom }}</p></div>
                            <p class="card-text">{{ etablissement.description | u.truncate(75, '...') }} </p>
                        </div>
                        <a href="{{ path('app_etablissement_slug',{'slug': etablissement.slug}) }}" class="mx-5 mb-2 d-flex justify-content-center btn btn-primary">Voir</a>
                    </div>
                </div>


            {% endfor %}
        </div>
        <div class="navigation d-flex justify-content-center mt-2 fixed-bottom">
            {{ knp_pagination_render(etablissements) }}
        </div>
    </div>
{% endblock %}

