{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">Formulaire de Connexion</h1>
    <form action="{{ path('app_security_login') }}" method="post">
        <div class="form-group">
            <label for="username" class="form-label mt-4">Adresse Mail</label>
            <input type="email" class="form-control" id="username" name="_username" placeholder="exemple@mail.com">
            <small id="emailHelp" class="form-text text-muted">test</small>
        </div>
        <div class="form-group">
            <label for="password" class="form-label mt-4">Adresse Mail</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="***************">
        </div>
        <button type="submit" class="btn btn-primary mt-2">se connecter
        </button>
    </form>
</div>
{% endblock %}
