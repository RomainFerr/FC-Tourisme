{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container px-5 py-5 mt-5 alert alert-secondary">
    <h1 class="mt-4 text-dark">Formulaire de Connexion</h1>
    {% if error %}
        <div class="alert alert-danger mt-5">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('app_security_login') }}" method="post">
        <div class="form-group">
            <label for="username" class="form-label mt-4">Adresse Mail</label>
            <input type="email" class="form-control" id="username" name="_username" placeholder="exemple@mail.com">
        </div>
        <div class="form-group">
            <label for="password" class="form-label mt-4">Mot de Passe</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="********">
        </div>
        <button type="submit" class="btn btn-primary mt-2">se connecter
        </button>
    </form>
</div>
{% endblock %}
